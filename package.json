{
  "name": "@rekiny-sukcesu/nestjs-zulip",
  "version": "0.0.1",
  "description": "NestJs module for Zulip communicator.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "rimraf -rf dist && tsc",
    "lint": "eslint \"lib/**/*.ts\"",
    "lint:fix": "eslint \"lib/**/*.ts\" --fix"
  },
  "keywords": [],
  "author": "RekinySukcesu.pl",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@typescript-eslint/parser": "^7.0.2",
    "axios": "^1.6.2"
  },
  "volta": {
    "node": "18.19.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/lib/",
      "<rootDir>/test"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/lib/$1"
    }
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkluszczynski/nest-zulip.git"
  },
  "bugs": {
    "url": "https://github.com/mkluszczynski/nest-zulip/issues"
  },
  "homepage": "https://github.com/mkluszczynski/nest-zulip#readme"
}
